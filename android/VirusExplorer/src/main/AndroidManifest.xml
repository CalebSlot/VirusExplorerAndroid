        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <meta-data android:name="com.qooapp.APP_ID" android:value="@string/com.qooapp.APP_ID"/>
    <meta-data android:name="com.qooapp.PUBLIC_KEY" android:value="@string/com.qooapp.PUBLIC_KEY" />
